<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--context action mode-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:activatedBackgroundIndicator">@drawable/bg_item_topic</item>
    </style>

    <style name="CBTheme" parent="AppTheme"/>

    <style name="CBTheme.Dialog" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Less use widget style-->
    <style name="CBTheme.AppBarOverlay">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CBTheme.PopupOverlay">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="CBTheme.TransparentStatusBar"/>
    <!--TextView style-->
    <style name="CBTheme.TextView"/>

    <style name="CBTheme.TextView.Title"/>

    <style name="CBTheme.TextView.Title.Articles">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="CBTheme.TextView.Title.Review">
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="CBTheme.TextView.Title.Headline">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="CBTheme.TextView.Title.Content">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
    </style>

    <style name="CBTheme.TextView.Summary"/>

    <style name="CBTheme.TextView.Summary.Articles">
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="CBTheme.TextView.Summary.Headline">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="CBTheme.TextView.Summary.Review">
        <item name="android:background">@drawable/bg_review_cmt</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="CBTheme.TextView.Hint"/>

    <style name="CBTheme.TextView.Hint.Articles">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
    </style>

    <style name="CBTheme.TextView.Hint.Review">
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="CBTheme.TextView.Hint.Content">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_extra_small</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/textSecondary</item>

    </style>

    <style name="CBTheme.TextView.Link"/>

    <style name="CBTheme.TextView.Link.Headline">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:drawableLeft">@drawable/ic_headline_relate</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--CardView style-->
    <style name="CBTheme.CardView">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <!--FloatActionButton style-->
    <style name="CBTheme.Fab">
        <item name="fabSize">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CBTheme.Fab.Content"/>

    <style name="CBTheme.Fab.Content.Small">
        <item name="fabSize">mini</item>
    </style>

    <style name="CBTheme.FabMenu"/>
    <!--ImageView style-->
    <style name="CBTheme.ImageView"/>
    <!--ProgressBar style-->
    <style name="CBTheme.ProgressBar"/>
    <!--Button style-->
    <style name="CBTheme.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
