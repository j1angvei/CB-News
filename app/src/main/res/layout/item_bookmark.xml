<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CBTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_margin">

        <TextView
            android:id="@+id/tv_bookmark_title"
            style="@style/CBTheme.Text.Title.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bookmark news title"/>

        <TextView
            android:id="@+id/tv_bookmark_time"
            style="@style/CBTheme.Text.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bookmark_title"
            android:gravity="end"
            android:text="Bookmarked at 2015 2 13 12:25"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>