<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_item_topic"
              android:orientation="horizontal"
              android:paddingBottom="4dp"
              android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
              android:paddingRight="?android:attr/expandableListPreferredChildPaddingLeft"
              android:paddingTop="4dp">

    <ImageView
        android:id="@+id/iv_add_topic_item_thumb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/fake_topic_album"/>

    <TextView
        android:id="@+id/tv_add_topic_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:ellipsize="marquee"
        android:paddingLeft="10dp"
        android:text="Google 谷歌"/>

    <CheckBox
        android:id="@+id/cb_add_topic_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>