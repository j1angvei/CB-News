<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_comment_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:background="?attr/selectableItemBackground"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Reply"/>

    <Button
        android:id="@+id/btn_comment_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@id/btn_comment_reply"
        android:background="?attr/selectableItemBackground"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Report"/>

    <Button
        android:id="@+id/btn_comment_down_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@id/btn_comment_report"
        android:background="?attr/selectableItemBackground"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Down vote"/>

    <Button
        android:id="@+id/btn_comment_up_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@id/btn_comment_down_vote"
        android:background="?attr/selectableItemBackground"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="Up vote"/>


</RelativeLayout>