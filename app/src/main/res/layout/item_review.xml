<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CBTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/card_margin">

        <TextView
            android:id="@+id/tv_review_comment"
            style="@style/CBTheme.Text.Title.Small"/>

        <TextView
            android:id="@+id/tv_review_location"
            style="@style/CBTheme.Text.Caption"
            android:layout_below="@id/tv_review_comment"
            android:paddingBottom="2dp"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tv_review_title"
            style="@style/CBTheme.Text.Body"
            android:layout_below="@id/tv_review_location"
            android:ellipsize="end"
            android:gravity="end"
            android:lines="1"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>