<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CBTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_margin">

        <TextView
            android:id="@+id/tv_article_title"
            style="@style/CBTheme.TextView.Title.Articles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"/>

        <LinearLayout
            android:id="@+id/ll_article_summary_thumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_article_title"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_article_summary"
                style="@style/CBTheme.TextView.Summary.Articles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="Summary\nSummary\nSummary\nSummary"/>

            <ImageView
                android:id="@+id/iv_article_thumb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/fake_article_thumb"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_article_summary_thumb"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_article_time"
                style="@style/CBTheme.TextView.Hint.Articles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_news_time"
                android:drawableStart="@drawable/ic_news_time"
                android:text="2016-02-15"/>

            <TextView
                android:id="@+id/tv_article_comment"
                style="@style/CBTheme.TextView.Hint.Articles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_news_comments"
                android:drawableStart="@drawable/ic_news_comments"
                android:text="20"/>

            <TextView
                android:id="@+id/tv_article_count"
                style="@style/CBTheme.TextView.Hint.Articles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_news_viewer"
                android:drawableStart="@drawable/ic_news_viewer"
                android:text="300"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>