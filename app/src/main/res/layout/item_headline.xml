<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CBTheme.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/tv_headline_title"
            style="@style/CBTheme.Text.Title"/>

        <TextView
            android:id="@+id/tv_headline_description"
            style="@style/CBTheme.Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_headline_title"/>

        <LinearLayout
            android:id="@+id/ll_headline_relate_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_headline_description"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <ImageView
                android:id="@+id/iv_headline_thumb"
                style="@style/CBTheme.Image.Headline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_headline_relate_1"
                    style="@style/CBTheme.Text.Snack"/>

                <TextView
                    android:id="@+id/tv_headline_relate_2"
                    style="@style/CBTheme.Text.Snack"/>

                <TextView
                    android:id="@+id/tv_headline_relate_3"
                    style="@style/CBTheme.Text.Snack"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>