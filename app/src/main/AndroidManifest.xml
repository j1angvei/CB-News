<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.j1angvei.cbnews">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="cn.j1angvei.cbnews.CBApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CBTheme">
        <!--activities-->
        <activity
            android:name="cn.j1angvei.cbnews.activity.SplashActivity"
            android:theme="@style/CBTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="cn.j1angvei.cbnews.activity.NewsActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/CBTheme.TransparentStatusBar">

        </activity>
        <activity
            android:name="cn.j1angvei.cbnews.activity.ContentActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>

                <data
                    android:host="www.j1angvei.cn"
                    android:pathPrefix="/about"
                    android:scheme="http"/>
            </intent-filter>
        </activity>

        <activity
            android:name="cn.j1angvei.cbnews.activity.CommentActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="cn.j1angvei.cbnews.activity.SettingsActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name="cn.j1angvei.cbnews.activity.TopicNewsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CBTheme.TransparentStatusBar"/>
        <activity android:name="cn.j1angvei.cbnews.activity.ImageActivity"/>
        <!--services-->
        <service
            android:name="cn.j1angvei.cbnews.service.OfflineDownloadService"
            android:exported="false"/>
        <service
            android:name="cn.j1angvei.cbnews.service.MyTopicService"
            android:exported="false"/>
    </application>
</manifest>
