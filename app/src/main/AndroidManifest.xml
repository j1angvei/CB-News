<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.j1angvei.cnbetareader">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".CBApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CBTheme">
        <activity
            android:name=".activity.NewsActivity"
            android:theme="@style/CBTheme.TransparentStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ContentActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>

                <data
                    android:host="www.j1angvei.cn"
                    android:pathPrefix="/about"
                    android:scheme="http"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.CommentsActivity"/>
        <activity android:name=".activity.SettingsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

    </application>

</manifest>
